## Print LAMBDA logo
print_logo() {
  local O="\e[38;5;166m"
  local P="\e[38;5;124m"

  echo ""
  echo -e "${O}██${P}╗      ${O}█████${P}╗ ${O}███${P}╗   ${O}███${P}╗${O}██████${P}╗ ${O}██████${P}╗  ${O}█████${P}╗ "
  echo -e "${O}██${P}║     ${O}██${P}╔══${O}██${P}╗${O}████${P}╗ ${O}████${P}║${O}██${P}╔══${O}██${P}╗${O}██${P}╔══${O}██${P}╗${O}██${P}╔══${O}██${P}╗"
  echo -e "${O}██${P}║     ${O}███████${P}║${O}██${P}╔${O}████${P}╔${O}██${P}║${O}██████${P}╔╝${O}██${P}║  ${O}██${P}║${O}███████${P}║"
  echo -e "${O}██${P}║     ${O}██${P}╔══${O}██${P}║${O}██${P}║╚${O}██${P}╔╝${O}██${P}║${O}██${P}╔══${O}██${P}╗${O}██${P}║  ${O}██${P}║${O}██${P}╔══${O}██${P}║"
  echo -e "${O}███████${P}╗${O}██${P}║  ${O}██${P}║${O}██${P}║ ╚═╝ ${O}██${P}║${O}██████${P}╔╝${O}██████${P}╔╝${O}██${P}║  ${O}██${P}║"
  echo -e "${P}╚══════╝╚═╝  ╚═╝╚═╝     ╚═╝╚═════╝ ╚═════╝ ╚═╝  ╚═╝"
}

print_logo
unset print_logo

## load theme
if [ $(which starship) ]; then eval "$(starship init bash)"
elif [ -f ~/.bash_theme ]; then . ~/.bash_theme
else echo "Starship not installed and no fallback theme found"
fi
