{  
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "name": {
        "type": "string"
      },
      "ingredients": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string"
            },
            "amount": {
              "type": "integer"
            }
          },
          "required": [
            "name"
          ]
        }
      }
    },
    "required": [
      "name",
      "ingredients"
    ]
  }
}